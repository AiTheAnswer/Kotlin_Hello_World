<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/topeka_primary</item>
        <item name="colorPrimaryDark">@color/topeka_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EdtHintTextAppearance">
        <item name="android:textSize">@dimen/ui_font_size_14</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/topeka_primary_dark</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:colorControlNormal">@android:color/darker_gray</item>
        <item name="android:colorControlActivated">@color/topeka_primary</item>
    </style>
    <style name="LoadingProgressBarTheme">

    </style>
</resources>
